---
import Layout from "@/layouts/Layout.astro";
import HeroKeyLogo from "@/assets/hero-key-logo.webp";
import HeroKeyBackground from "@/assets/hero-key-background.webp";
import LogoVI from "@/assets/logo-vi.svg";
import Menu from "@/assets/menu.svg";
---
<Layout>
  <section>
    <picture id="hero-key" class="h-screen scale-125 block overflow-hidden fixed">
      <img
        id="hero-key-logo"
        src={HeroKeyLogo.src}
        class="absolute w-full h-full object-cover"
        alt="Logo"
      />
	  <img
        id="hero-key-background"
        src={HeroKeyBackground.src}
        class="w-full h-full object-cover"
        alt="Logo Background"
      />
    </picture>
  </section>

  <div class="fixed flex flex-col items-center justifi-between p-16 py-14 w-full h-screen">
    <header class="flex justify-between w-full">
      <LogoVI class="size-8 text-white hover:text-yellow-100 transition-colors duration-500 cursor-pointer" />
      <Menu class="size-8 text-white hover:text-yellow-100 transition-colors duration-500 cursor-pointer" />
    </header>
  </div>
</Layout>
